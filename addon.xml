    version="2.0.0"
    name="NDC Session Videos"
    provider-name="Kevin Baister">

    <requires>
        <import addon="xbmc.gui"/>
        <import addon="xbmc.plugin"/>
        <import addon="script.module.beautifulsoup" version="3.2.0"/>
    </requires>

    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
      </extension>
    <extension point="xbmc.addon.metadata">
        <summary>View the NDC Session Videos</summary>
        <description>View all of the online session videos from the Norwegian Developers Conference</description>
        <platform>all</platform>
    </extension>

